pipeline {
    agent {
        dockerfile {
            dir '.devops'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        HOME = '.'
    }
    stages {
        stage('Build') {
            steps {
                sh "npm install"
            }
        }
        stage('Test') {
            steps {
                sh "npm run test"
            }
        }
    }
}